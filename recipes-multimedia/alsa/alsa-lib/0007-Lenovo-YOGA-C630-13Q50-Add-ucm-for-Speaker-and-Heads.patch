+	cset "name='SLIM RX6 MUX' AIF1_PB"
+	cset "name='SLIM RX7 MUX' AIF1_PB"
+	cset "name='RX INT7_1 MIX1 INP0' RX6"
+	cset "name='RX INT8_1 MIX1 INP0' RX7"
+	cset "name='SLIMBUS_0_RX Audio Mixer MultiMedia1' 1"
+]
